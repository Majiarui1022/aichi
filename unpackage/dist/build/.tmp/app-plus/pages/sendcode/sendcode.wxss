.code-box .init-box {
    width: 100%;
    height: 100rpx;
    position: relative;
    padding: 0 20rpx;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
}
.code-box .init-box input {
      width: calc( 100% + 100rpx);
      height: 100%;
      display: block;
      position: absolute;
      left: -100rpx;
      top: 0;
      opacity: 0;
      color: transparent;
      caret-color: transparent;
}
