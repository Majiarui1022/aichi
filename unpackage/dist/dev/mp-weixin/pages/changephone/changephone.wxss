.change-pohone-box {
  width: 100%;
  height: 100%;
}
.change-pohone-box .change-phone-content {
    width: 100%;
    height: 100%;
    padding: 0 30rpx;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
}
.change-pohone-box .change-phone-content .change-phone-tit {
      font-size: 26rpx;
      font-weight: normal;
      color: #aaaaaa;
      margin-top: 52rpx;
}
.change-pohone-box .change-phone-content .change-phone-tit .change-get-code {
        float: right;
}
.change-pohone-box .change-phone-content .change-white-photo {
      width: 100%;
      height: 52rpx;
      border-bottom: 1rpx solid #EDEDED;
      position: relative;
      margin-top: 8rpx;
}
.change-pohone-box .change-phone-content .change-white-photo input {
        width: 100%;
        height: 100%;
        display: block;
        padding-right: 50rpx;
        -webkit-box-sizing: border-box;
                box-sizing: border-box;
        color: #333333;
        font-size: 20rpx;
}
.change-pohone-box .change-phone-content .change-white-photo image {
        width: 33rpx;
        height: 33rpx;
        position: absolute;
        right: 0rpx;
        top: 50%;
        margin-top: -16.5rpx;
}
.change-pohone-box .change-phone-content .change-commit-data {
      width: 100%;
      height: 88rpx;
      background: #038577;
      border-radius: 10rpx;
      text-align: center;
      line-height: 88rpx;
      color: #FFFFFF;
      margin-top: 75rpx;
}
.change-pohone-box .change-phone-content .change-commit-data:active {
        background: #049d8c;
}

