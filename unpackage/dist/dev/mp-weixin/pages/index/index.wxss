.map-box {
  width: 100%;
  height: 100%;
  background: red;
  position: relative;
}
.map-box .search-box {
    width: calc(100% - 20rpx);
    height: 72rpx;
    background: white;
    -webkit-box-shadow: 0px 0px 2rpx 0px rgba(213, 218, 227, 0.5);
            box-shadow: 0px 0px 2rpx 0px rgba(213, 218, 227, 0.5);
    position: absolute;
    left: 10rpx;
    top: 16rpx;
    border-radius: 20rpx;
    z-index: 999;
    font-size: 26rpx;
    font-family: SimHei;
    color: #bbbbbb;
    line-height: 72rpx;
    text-indent: 100rpx;
    display: none;
}
.map-box .count-down-box {
    width: calc(100% - 20rpx);
    height: 100rpx;
    background: white;
    -webkit-box-shadow: 2rpx 2rpx 2rpx 1rpx rgba(0, 0, 0, 0.16);
            box-shadow: 2rpx 2rpx 2rpx 1rpx rgba(0, 0, 0, 0.16);
    border-radius: 20rpx;
    position: absolute;
    left: 10rpx;
    z-index: 999;
    top: 16rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
        -ms-flex-align: center;
            align-items: center;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
        -ms-flex-pack: justify;
            justify-content: space-between;
    padding: 18rpx 32rpx 18rpx 26rpx;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
}
.map-box .count-down-box .count-down-menu .row-one {
      font-size: 30rpx;
      color: #333333;
      line-height: 30rpx;
      margin-bottom: 12rpx;
}
.map-box .count-down-box .count-down-menu .row-one ._span {
        color: #038577;
}
.map-box .count-down-box .count-down-menu .row-two {
      font-size: 26rpx;
      color: #999999;
      line-height: 26rpx;
}
.map-box .count-down-box .count-down-but {
      width: 100rpx;
      height: 46rpx;
      background: #038577;
      border-radius: 23rpx;
      font-size: 26rpx;
      color: white;
      line-height: 46rpx;
      text-align: center;
}
.map-box .but {
    width: 400rpx;
    height: 100rpx;
    background: #646464;
    border-radius: 16rpx;
    position: absolute;
    left: calc(50% - 200rpx);
    bottom: 60rpx;
    z-index: 999;
}
.map-box .but .nopro {
      font-size: 28rpx;
      color: white;
      line-height: 100rpx;
      text-align: center;
}
.map-box .back {
    font-size: 12rpx;
    position: fixed;
    right: 50rpx;
    bottom: 50rpx;
}
.map-box .isme {
    display: block;
    position: fixed;
    width: 24rpx;
    height: 44rpx;
    top: 50%;
    left: 50%;
    margin-left: -10rpx;
    margin-top: -44rpx;
}

